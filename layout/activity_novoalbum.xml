<HorizontalScrollView xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent" android:layout_height="wrap_content" >

    <ScrollView android:id="@+id/encontar_amigos"
        android:layout_width="wrap_content"
        android:layout_height="match_parent" >

        <RelativeLayout android:id="@+id/content_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >



            <RelativeLayout android:id="@+id/page_encontar_amigos_ek1"
                android:layout_marginTop="0dp"
                android:layout_marginStart="0dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                >



                <View   android:id="@+id/_bg__encontar_amigos_ek2"
                    android:background="@drawable/_bg__encontar_amigos_ek2_shape"
                    android:layout_marginStart="0dp"
                    android:layout_marginTop="0dp"
                    android:layout_width="414dp"
                    android:layout_height="736dp" />

                <ImageView
                    android:id="@+id/imageView5"
                    android:layout_width="102dp"
                    android:layout_height="89dp"
                    android:layout_marginLeft="300dp"
                    android:onClick="menu"
                    android:src="@drawable/_9110356_menu_icon_1"
                    tools:ignore="SpeakableTextPresentCheck,SpeakableTextPresentCheck,SpeakableTextPresentCheck,SpeakableTextPresentCheck,SpeakableTextPresentCheck" />

                <View   android:id="@+id/ellipse_6"
                    android:background="@drawable/ellipse_6_shape"
                    android:alpha="0.81999999284744"
                    android:layout_marginStart="-44dp"
                    android:layout_marginTop="-39dp"
                    android:layout_width="165dp"
                    android:layout_height="165dp" />

                <View   android:id="@+id/ellipse_7"
                    android:background="@drawable/ellipse_7_shape"
                    android:alpha="0.6700000166893"
                    android:layout_marginStart="24dp"
                    android:layout_marginTop="-78dp"
                    android:layout_width="166dp"
                    android:layout_height="166dp" />

                <EditText android:id="@+id/nome_album"
                    android:layout_marginTop="424dp"
                    android:layout_width="316dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="50dp"
                    android:hint="Nome do album"
                    android:textSize="25dp"
                    android:textColorHint="@color/sign_up_color"
                    android:background="@drawable/rectangle_14_shape"
                    android:layout_marginBottom="30dp"
                    android:paddingLeft="30dp"
                    />

                <TextView
                    android:id="@+id/encontrar_amigos"
                    android:layout_width="288dp"
                    android:layout_height="66dp"
                    android:layout_gravity="center_horizontal|center"
                    android:layout_marginLeft="73dp"
                    android:layout_marginTop="67dp"
                    android:gravity="center"
                    android:text="Criar Album"
                    android:textColor="@color/criar_album_color"
                    android:textSize="35sp"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/imagem"
                    android:layout_width="200dp"
                    android:layout_height="128dp"
                    android:layout_marginStart="101dp"
                    android:layout_marginTop="150dp"
                    android:src="@android:drawable/ic_menu_camera" />


                <Button
                    android:id="@+id/addalbum"
                    android:layout_width="229dp"
                    android:layout_height="50dp"
                    android:layout_marginStart="92dp"
                    android:layout_marginTop="515dp"
                    android:hint="Criar Álbum"
                    android:textColorHint="@color/white"
                    android:background="@drawable/rectangle_53_shape"

                    />

                <Button
                    android:id="@+id/addfoto"
                    android:layout_width="159dp"
                    android:layout_height="48dp"
                    android:layout_marginLeft="250dp"
                    android:layout_marginTop="345dp"
                    android:background="@drawable/rectangle_53_shape"
                    android:hint="Escolher Foto"
                    android:textColorHint="@color/white"

                    />


                <TextView
                    android:layout_marginLeft="20dp"
                    android:id="@+id/textView8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Selecione uma foto para o album"
                    android:textColor="#2196F3"
                    android:layout_marginTop="300dp"
                    android:textSize="24sp" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recyclerview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="580dp" />

            </RelativeLayout>
        </RelativeLayout>

    </ScrollView>
</HorizontalScrollView>