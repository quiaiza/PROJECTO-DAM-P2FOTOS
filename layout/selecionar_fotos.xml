<HorizontalScrollView xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent" android:layout_height="wrap_content" >

	<ScrollView android:id="@+id/selecionar_fotos" 
		android:layout_width="wrap_content" 
		android:layout_height="match_parent" >

		<RelativeLayout android:id="@+id/content_container" 
			android:layout_width="wrap_content" 
			android:layout_height="wrap_content" >



			<RelativeLayout android:id="@+id/page_selecionar_fotos_ek1"
				android:layout_marginTop="0dp"
				android:layout_marginStart="0dp"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				>

				<View   android:id="@+id/_bg__selecionar_fotos_ek2"
					android:background="@drawable/_bg__selecionar_fotos_ek2_shape"
					 android:layout_marginStart="0dp"
					android:layout_marginTop="0dp"
					android:layout_width="332dp"
					android:layout_height="206dp" />

				<View
					android:id="@+id/rectangle_45"
					android:layout_width="166dp"
					android:layout_height="54dp"
					android:layout_marginStart="0dp"
					android:layout_marginTop="152dp"
					android:alpha="0.43000000715256"
					android:background="@drawable/rectangle_45_shape"
					android:onClick="cancelar"
					tools:ignore="SpeakableTextPresentCheck" />

				<View
					android:id="@+id/rectangle_46"
					android:layout_width="166dp"
					android:layout_height="54dp"
					android:layout_marginStart="166dp"
					android:layout_marginTop="152dp"
					android:alpha="0.43000000715256"
					android:background="@drawable/rectangle_46_shape"
					android:onClick="concluido"
					tools:ignore="SpeakableTextPresentCheck" />

				<View   android:id="@+id/line_7"
					android:background="@drawable/line_7_shape"
					 android:alpha="0.2"
					 android:layout_marginStart="139dp"
					android:layout_marginTop="179dp"
					android:layout_width="54dp"
					android:layout_height="1dp" />

				<TextView
					android:id="@+id/cancelar"
					android:layout_width="97dp"
					android:layout_height="41dp"
					android:layout_gravity="center_horizontal|center"
					android:layout_marginLeft="40dp"
					android:layout_marginTop="165dp"
					android:gravity="center"
					android:onClick="cancelar"
					android:text="@string/cancelar_string"
					android:textColor="@color/cancelar_color"
					android:textSize="20sp"
					android:textStyle="bold"
					tools:ignore="TouchTargetSizeCheck" />

				<View   android:id="@+id/line_8"
					android:background="@drawable/line_8_shape"
					 android:alpha="0.2"
					 android:layout_marginStart="0dp"
					android:layout_marginTop="152dp"
					android:layout_width="332dp"
					android:layout_height="1dp" />

				<TextView android:id="@+id/nome_do_album"
					android:textStyle="bold"
					android:layout_gravity="center_horizontal|center"
					android:gravity="center"
					android:textSize="20sp"
					android:textColor="@color/line_7_color"
					android:layout_marginLeft="20dp"
					android:layout_marginTop="25dp"
					android:layout_width="295dp"
					android:layout_height="37dp"
					android:text="@string/nome_do_album_string"
					 />

				<View   android:id="@+id/rectangle_522"
					android:background="@drawable/rectangle_52_shape"
					 android:layout_marginStart="29dp"
					android:layout_marginTop="68dp"
					android:layout_width="276dp"
					android:layout_height="66dp" />

				<TextView
					android:id="@+id/selecionar_fotos_ek3"
					android:layout_width="163dp"
					android:layout_height="41dp"
					android:layout_gravity="center_horizontal|center"
					android:layout_marginLeft="113dp"
					android:layout_marginTop="80dp"
					android:gravity="center"
					android:onClick="addfotos"
					android:text="@string/selecionar_fotos_ek3_string"
					android:textColor="@color/line_7_color"
					android:textSize="20sp"
					tools:ignore="TouchTargetSizeCheck" />

				<ImageView
					android:id="@+id/plus_math"
					android:layout_width="48dp"
					android:layout_height="48dp"
					android:layout_marginStart="57dp"
					android:layout_marginTop="86dp"
					android:contentDescription="plus_math"
					android:onClick="addfotos"
					android:src="@drawable/plus_math" />

				<TextView
					android:id="@+id/concluido"
					android:layout_width="108dp"
					android:layout_height="48dp"
					android:layout_gravity="center_horizontal|center"
					android:layout_marginLeft="194dp"
					android:layout_marginTop="165dp"
					android:gravity="center"
					android:onClick="concluido"
					android:text="@string/concluido_string"
					android:textColor="@color/cancelar_color"
					android:textSize="20sp"
					android:textStyle="bold" />

			</RelativeLayout>
		</RelativeLayout>

	</ScrollView>
</HorizontalScrollView>